<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.tmdb.activities.SignInActivity">

        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/gradient_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/app_theme_gradient_vertical"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:fontFamily="@font/source_sans_pro_extra_bold"
            android:gravity="center"
            android:text="@string/the_movie_database"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/ic_tmdb_small_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/sign_in_with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_white_rounded48_filled"
            app:layout_constraintBottom_toTopOf="@id/sign_in_with_facebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_sign_in_with_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:elevation="8dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="@string/continue_with_google"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/google_logo"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_with_google"
            app:layout_constraintEnd_toEndOf="@id/sign_in_with_google"
            app:layout_constraintStart_toStartOf="@id/sign_in_with_google"
            app:layout_constraintTop_toTopOf="@id/sign_in_with_google" />

        <Button
            android:id="@+id/sign_in_with_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_white_rounded48_filled"
            app:layout_constraintBottom_toTopOf="@id/manual_sign_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_sign_in_with_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:elevation="8dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="@string/continue_with_facebook"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/facebook_logo"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_with_facebook"
            app:layout_constraintEnd_toEndOf="@id/sign_in_with_facebook"
            app:layout_constraintStart_toStartOf="@id/sign_in_with_facebook"
            app:layout_constraintTop_toTopOf="@id/sign_in_with_facebook" />


        <Button
            android:id="@+id/manual_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_white_rounded48_filled"
            app:layout_constraintBottom_toTopOf="@id/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_tmdb_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:elevation="8dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/icon_sign_in"
            app:layout_constraintBottom_toBottomOf="@id/manual_sign_in"
            app:layout_constraintEnd_toEndOf="@id/manual_sign_in"
            app:layout_constraintStart_toStartOf="@id/manual_sign_in"
            app:layout_constraintTop_toTopOf="@id/manual_sign_in" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:background="@drawable/bg_white_rounded48_filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:elevation="8dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/icon_login"
            app:layout_constraintBottom_toBottomOf="@id/login"
            app:layout_constraintEnd_toEndOf="@id/login"
            app:layout_constraintStart_toStartOf="@id/login"
            app:layout_constraintTop_toTopOf="@id/login" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>